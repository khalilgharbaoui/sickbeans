function updateSoybeans(innerHTML){
  var newSoybeans = document.querySelector('.container-soybean');
  newSoybeans.innerHTML = innerHTML;
}

function updateCounter(){
  var soybeans = document.querySelectorAll('.soybean')
  var badge = document.querySelector('.badge')
  badge.innerText = `${soybeans.length} soybeans in sample`
}

updateSoybeans('<%= j render "soybeans", soybeans: @soybeans %>')
updateCounter()
