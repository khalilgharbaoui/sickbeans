function updateSoybeans(innerHTML){
  const newSoybeans = document.querySelector('.container-soybean');
  newSoybeans.innerHTML = innerHTML;
}

function updateCounter(){
  const soybeans = document.querySelectorAll('.soybean')
  const badge = document.querySelector('.badge')
  badge.innerText = `${soybeans.length} soybeans in sample`
}

updateSoybeans('<%= j render "soybeans", soybeans: @soybeans %>')
updateCounter()
